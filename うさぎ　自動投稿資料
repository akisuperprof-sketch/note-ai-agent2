def post_to_note(email, password, title, markdown_content, image_path=None):
    """noteã«è¨˜äº‹ã‚’æŠ•ç¨¿ã™ã‚‹å®Œå…¨ãªé–¢æ•°"""
    
    print("1. noteã«ãƒ­ã‚°ã‚¤ãƒ³ä¸­...")
    cookies = get_note_cookies(email, password)
    
    print("2. è¨˜äº‹ã‚’ä½œæˆä¸­...")
    article_id, article_key = create_article(cookies, title, markdown_content)
    
    if not article_id:
        return False
    
    image_key = None
    if image_path:
        print("3. ç”»åƒã‚’ã‚¢ãƒƒãƒ—ãƒ­ãƒ¼ãƒ‰ä¸­...")
        image_key, image_url = upload_image(cookies, image_path)
    
    print("4. è¨˜äº‹ã‚’ä¸‹æ›¸ãä¿å­˜ä¸­...")
    success = update_article_draft(
        cookies, 
        article_id, 
        title, 
        markdown_content, 
        image_key
    )
    
    if success:
        print(f"\nâœ… æŠ•ç¨¿å®Œäº†ï¼")
        print(f"è¨˜äº‹URL: https://note.com/your_username/n/{article_key}")
    
    return success

