def update_article_draft(cookies, article_id, title, markdown_content, image_key=None):
    """è¨˜äº‹ã‚’æ›´æ–°ã—ã¦ä¸‹æ›¸ãã¨ã—ã¦ä¿å­˜"""
    
    html_content = markdown_to_html(markdown_content)
    
    headers = {
        'Content-Type': 'application/json',
        'User-Agent': 'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36',
    }
    
    data = {
        'body': html_content,
        'name': title,
        'status': 'draft',  # ä¸‹æ›¸ãã¨ã—ã¦ä¿å­˜
    }
    
    # ã‚¢ã‚¤ã‚­ãƒ£ãƒƒãƒç”»åƒãŒã‚ã‚‹å ´åˆã¯è¿½åŠ 
    if image_key:
        data['eyecatch_image_key'] = image_key
    
    response = requests.put(
        f'https://note.com/api/v1/text_notes/{article_id}',
        cookies=cookies,
        headers=headers,
        json=data
    )
    
    if response.status_code == 200:
        print("è¨˜äº‹ã®ä¸‹æ›¸ãä¿å­˜æˆåŠŸï¼")
        return True
    else:
        print(f"è¨˜äº‹ã®æ›´æ–°å¤±æ•—: {response.status_code}")
        return False

